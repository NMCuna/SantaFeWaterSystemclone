@{
    ViewData["Title"] = "Contact Us";
}

@section Styles {
    <style>
        .contact-section {
            background: #f9f9f9;
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }

        .contact-heading {
            font-size: clamp(1.5rem, 4vw, 2.25rem);
            font-weight: bold;
            color: #0d6efd;
        }

        .contact-text {
            font-size: clamp(1rem, 3.5vw, 1.1rem);
            line-height: 1.6;
        }

        .contact-icon {
            font-size: 1.5rem;
            margin-right: 0.5rem;
            color: #198754;
        }

            @@media (max-width: 576px) {
            .contact-text

        {
            text-align: left;
        }

        }
    </style>
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="contact-section">
                <h1 class="contact-heading mb-4"><i class="bi bi-telephone-forward"></i> Contact Us</h1>

                <p class="contact-text">
                    For general inquiries or assistance, feel free to reach out to us via phone or email.
                </p>

                <p class="contact-text">
                    <i class="bi bi-telephone-fill contact-icon"></i> <strong>Phone:</strong> (032) 123-4567
                </p>
                <p class="contact-text">
                    <i class="bi bi-envelope-fill contact-icon"></i> <strong>Email:</strong>
                    <a href="mailto:support@santafewater.com">support@santafewater.com</a>
                </p>

                <hr />

                <h5 class="mt-4 contact-heading">Water Meter Installation</h5>
                <p class="contact-text">
                    If you would like to apply for a water meter connection, please visit the
                    <strong>Santa Fe Municipal Hall</strong> located in <strong>Bantayan Island, Cebu</strong>.
                </p>
                <p class="contact-text">
                    You may also call us first to learn about the required documents and qualifications before visiting.
                </p>
            </div>
        </div>
    </div>
</div>
