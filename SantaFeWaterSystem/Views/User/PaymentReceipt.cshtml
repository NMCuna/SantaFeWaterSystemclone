@model SantaFeWaterSystem.ViewModels.PaymentReceiptViewModel

@{
    ViewData["Title"] = "Payment Receipt";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/receipt.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
}

<div class="receipt-container">
    <div class="receipt-header text-center">
        <h2 class="glow"><i class="bi bi-receipt-cutoff me-2"></i> Payment Receipt</h2>
        <p class="text-muted">Santa Fe Water Billing System</p>
    </div>

    <div class="receipt-section">
        <h5><i class="bi bi-person-fill me-2"></i>Consumer Info</h5>
        <div class="row mb-2">
            <div class="col-12 col-md-6 mb-2 receipt-line-item"><strong>Account Number:</strong> @Model.AccountNumber</div>
            <div class="col-12 col-md-6 mb-2 receipt-line-item"><strong>Full Name:</strong> @Model.FullName</div>
        </div>
    </div>

    <div class="receipt-section">
        <h5><i class="bi bi-receipt me-2"></i>Payment Details</h5>
        <div class="row mb-2">
            <div class="col-12 col-md-6 mb-2 receipt-line-item"><strong>Bill No:</strong> @Model.BillNo</div>
            <div class="col-12 col-md-6 mb-2 receipt-line-item">
                <strong>Status:</strong>
                @if (Model.Status == "Verified")
                {
                    <span class="badge bg-success">Verified</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Pending</span>
                }
            </div>
            <div class="col-12 col-md-6 mb-2 receipt-line-item"><strong>Payment Date:</strong> @Model.PaymentDate.ToString("MMM dd, yyyy")</div>
            <div class="col-12 col-md-6 mb-2 receipt-line-item"><strong>Amount Paid:</strong> ₱@Model.AmountPaid.ToString("N2")</div>
            <div class="col-12 col-md-6 mb-2 receipt-line-item"><strong>Method:</strong> @Model.Method</div>
            <div class="col-12 col-md-6 mb-2 receipt-line-item"><strong>Transaction ID:</strong> @Model.TransactionId</div>
        </div>
    </div>

    <div class="text-center mt-4 no-print">
        <a href="javascript:window.print()" class="btn btn-outline-dark me-2">
            <i class="bi bi-printer me-1"></i> Print Receipt
        </a>
        <a asp-action="Payment" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>
    </div>
</div>
